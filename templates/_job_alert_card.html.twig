<div class="m-3 p-3 border rounded row col-xl-3 col-11">

    <div class="">
        <h3>
            {{ job.company | default('job_company') }}
        </h3>

        <h5 class="">
            {{ job.location  | default('job_location' ) }}
        </h5>
        <p>
            Publi√© le
            {{ job.created | default('job_created') }}
